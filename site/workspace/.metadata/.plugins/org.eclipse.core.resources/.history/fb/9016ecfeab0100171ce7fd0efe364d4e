		<script type="text/javascript">
		$(function(){
			var page = getQueryVariable("page");
			if(typeof page != "string"){
				page = "7";
			}
			
			var param = getQueryVariable("id");
			$.getJSON( "blog/page-"+param+".json", function( data ) {
				$( ".blogpage-title" ).html( data.title );					  
				$( ".blogpage-day" ).html( data.day );					  
				$( ".blogpage-month" ).html( data.month );					  
				$( ".blogpage-image" ).attr( "src", "blog/img/" + data.image + "-lg.jpg" );					  
				$( ".blogpage-text" ).html( data.text );					  
				$( ".blogpage-link" ).attr( "href","blog.html?page=" + page.toString() );					  
			});
		
		});
		</script>		
